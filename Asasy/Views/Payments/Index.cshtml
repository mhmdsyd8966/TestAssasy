@using Asasy.Domain.ViewModel.Payment;
@model IEnumerable<PaymentsListViewModel>
@{
    ViewData["Title"] = "مدفوعات العملاء";
}

<div class="card-box">

    <h2 class="header-title m-t-0 m-b-30">مدفوعات العملاء</h2>

    <div>
       

        <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th>رقم العمليه</th>
                    <th>المبلغ المدفوع</th>
                    <th>طريقه الدفع</th>
                    <th>الاسم</th>
                    <th> رقم الجوال </th>
                    <th>الصوره </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Paid)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TypePaye)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PhoneNumber)
                        </td>
                        <td>
                            <img src="@item.UserImage" style="width:100px; height:100px; " />
                        </td>


                    </tr>
                }
            </tbody>
        </table>

        <!-- -------------------------------------------------------------------------------------------------- -->
    </div><!-- end row -->
</div>


