@using Asasy.Domain.ViewModel.Package;
@model AddNewPackageViewModel

@{
    ViewData["Title"] = "اضافة باقه";
}

<div class="card-box">
    <h2 class="header-title m-t-0 m-b-30">اضافة باقه</h2>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Create" enctype="multipart/form-data" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="NameAr" class="control-label">اسم الباقه بالعربيه</label>
                    <input asp-for="NameAr" class="form-control" />
                    <span asp-validation-for="NameAr" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NameEn" class="control-label">اسم الباقه بالانجليزيه</label>
                    <input asp-for="NameEn" class="form-control" />
                    <span asp-validation-for="NameEn" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DescriptionAr" class="control-label">وصف الباقه بالعربيه</label>
                    <input asp-for="DescriptionAr" class="form-control" />
                    <span asp-validation-for="DescriptionAr" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DescriptionEn" class="control-label">وصف الباقه بالانجليزيه</label>
                    <input asp-for="DescriptionEn" class="form-control" />
                    <span asp-validation-for="DescriptionEn" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price" class="control-label">سعر الباقه</label>
                    <input type="number" asp-for="Price" class="form-control" id="prc" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CountDayes" class="control-label">مده الباقه بالايام</label>
                    <input type="number" asp-for="CountDayes" class="form-control" id="counDays"/>
                    <span asp-validation-for="CountDayes" class="text-danger"></span>
                </div>
               
                <div class="form-group">
                    <input type="submit" value="اضافة" class="btn-new-style btn-rounded" />
                </div>
                <div>
                    <a asp-controller="AsasyPackages" asp-action="Index" class="btn-black">العودة الى الرئيسية</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        document.querySelector("#counDays").addEventListener("keypress", function (evt) {
            if (evt.which != 8 && evt.which != 0 && evt.which < 48 || evt.which > 57) {
                evt.preventDefault();
            }
        });

        document.querySelector("#prc").addEventListener("keypress", function (evt) {
            if (evt.which != 8 && evt.which != 0 && evt.which < 48 || evt.which > 57) {
                evt.preventDefault();
            }
        });
    </script>
}
