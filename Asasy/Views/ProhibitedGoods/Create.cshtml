@using Asasy.Domain.ViewModel.ProhibitedGoods;
@model NewProhibitedGoodViewModel

@{
    ViewData["Title"] = "اضافة سلعه جديده";
}

<div class="card-box">
    <h2 class="header-title m-t-0 m-b-30">اضافة سلعه جديده</h2>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Create" enctype="multipart/form-data" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="NameAr" class="control-label">اسم السلعه بالعربيه</label>
                    <input asp-for="NameAr" class="form-control" />
                    <span asp-validation-for="NameAr" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NameEn" class="control-label">اسم السلعه بالانجليزيه</label>
                    <input asp-for="NameEn" class="form-control" />
                    <span asp-validation-for="NameEn" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DescriptionAr" class="control-label">وصف السلعه بالعربيه</label>
                    <input asp-for="DescriptionAr" class="form-control" />
                    <span asp-validation-for="DescriptionAr" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DescriptionEn" class="control-label">وصف السلعه بالانجليزيه</label>
                    <input asp-for="DescriptionEn" class="form-control" />
                    <span asp-validation-for="DescriptionEn" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="اضافة" class="btn-new-style btn-rounded" />
                </div>
                <div>
                    <a asp-controller="ProhibitedGoods" asp-action="Index" class="btn-black">العودة الى الرئيسية</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
